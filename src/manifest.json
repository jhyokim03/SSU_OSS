{
    "manifest_version": 3,
    "name": "뉴스링커",
    "version": "1.0",
    "description": "유튜브 콘텐츠 관련 뉴스 연결",
    "permissions": ["storage"], 
    "background": {
        "service_worker": "background.js" 
    },
    "action": {
        "default_popup": "practice.html", 
        "default_icon": "youtube.png" 
    },
    "icons": {
        "48": "youtube.png" 
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"] 
        }
    ]
}
